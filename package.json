{
  "name": "electron-time-tracker",
  "description": "This is a sample electron-react app tht clicks screenshot at regular intervals",
  "version": "0.1.0",
  "author": "Jass",
  "private": true,
  "productName": "Clockify - TimeTracker",
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.jass.timetracker",
    "productName": "Clockify - TimeTracker",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electronmon": "^2.0.2",
    "express": "^4.18.2",
    "firebase": "^10.5.0",
    "knex": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run start\" \" electromon .\"",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron.js --publish never",
    "build-er": "npm run build && npm run package"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4"
  }
}
